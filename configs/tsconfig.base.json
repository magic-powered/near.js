{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "checkJs": true,
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true
  },
  "exclude": [
    "../node_modules",
    "./../packages/sandbox/*"
  ],
  "include": [
    "./../packages/**/*.ts",
    "./../packages/**/lib/**/*.ts"
  ]
}
